{% extends "layout.njk" %}  <!-- QUANDO CHEGAR NESSA PÁGINA TENHO QUE IR PARA A PAGINA LAYOUT-->

{% block head %}

    <title>Portfolio - Mayk Brito</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %}


        <div id="wrapper">
            <h1>Aulas</h1>
        </div>
        
        <section class="cards">

            {% for item in items %}  {# Estrutura de repetição para substituição dos ITEMS vindos do data.js #}
            <div class="card" id="{{item.id}}">
                <div class="card__image-container">
                    <img src="http://i3.ytimg.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}"/>
                </div>
                <div class="card__content">
                    {{item.title}}
                </div>
                <div class="card__info">
                    <p>{{item.duration}}</p>
                    <p class="card__price">{{item.price}}</p>
                </div>
            </div>

            {% endfor %} {# Fechamento do FOR , da repetição #}
            
        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        
        <script src="scripts.js"></script>


{% endblock %}

